{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"paths": {
			"*": ["./*"],
			"ai": ["./packages/ai/src/index.ts"],
			"ai/*": ["./packages/ai/src/*"],
			"agent": ["./packages/agent/src/index.ts"],
			"agent/*": ["./packages/agent/src/*"],
			"coding-agent": ["./packages/coding-agent/src/index.ts"],
			"coding-agent/hooks": ["./packages/coding-agent/src/core/hooks/index.ts"],
			"coding-agent/*": ["./packages/coding-agent/src/*"],
			"@sinclair/typebox": ["./node_modules/@sinclair/typebox"],
			"mom": ["./packages/mom/src/index.ts"],
			"mom/*": ["./packages/mom/src/*"],
			"pods": ["./packages/pods/src/index.ts"],
			"pods/*": ["./packages/pods/src/*"],
			"tui": ["./packages/tui/src/index.ts"],
			"tui/*": ["./packages/tui/src/*"],
		}
	},
	"include": ["packages/*/src/**/*", "packages/*/test/**/*", "packages/coding-agent/examples/**/*"],
	"exclude": ["**/dist/**"]
}
